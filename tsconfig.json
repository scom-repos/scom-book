{
  "compilerOptions": {
    "target": "ES2017",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "jsx": "preserve",
    "jsxFactory": "this.$render",
    "jsxFragmentFactory": "this.$render",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "baseUrl": ".",
    "paths": {
      "@scom-book/*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}